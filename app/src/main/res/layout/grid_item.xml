<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="30dp">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageViewCloset"
        android:contentDescription="tempDescription"
        />

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageViewCloset"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/clothesTag"
        android:text="Outfit Name"
        android:fontFamily="@font/lemands"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_marginTop="6dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/blush"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/deleteButtonCloset"
        />

</androidx.constraintlayout.widget.ConstraintLayout>